#!/usr/bin/env bash
# This script creates a PID file, displays messages, and handles signals

pid_file="/var/run/myscript.pid"

cleanup() {
    rm -f "$pid_file"
    echo "Y U no love me?!"
    exit 1
}

trap 'cleanup' SIGTERM SIGQUIT
trap 'echo "I hate the kill command"; exit' SIGINT

echo "$$" > "$pid_file"

while true; do
    echo "To infinity and beyond"
    sleep 2
done
